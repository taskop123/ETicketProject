@model ETicket.Domain.Identity.UserRegisterDto
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <h1 class="text-center">Register</h1>
    <form asp-action="Register" asp-controller="Account" method="post" >
        <div class="row w-50 mx-auto">
            <div class="form-group col-12">
                <div class="row justify-content-center">
                    <div class="col-8">
                        Email <br />
                        @Html.TextBoxFor(m => m.Email, new { placeholder = "Email", @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger"})
                    </div>
                </div>
            </div>
        </div>

        <div class="row w-50 mx-auto">
            <div class="form-group col-12">
                <div class="row justify-content-center">
                    <div class="col-8">
                        Password <br />
                        @Html.PasswordFor(m => m.Password, new { placeholder = "Password", @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger"})
                    </div>
                </div>
            </div>
        </div>
        <div class="row w-50 mx-auto">
            <div class="form-group col-12">
                <div class="row justify-content-center">
                    <div class="col-8">
                        Confirm Password <br />
                        @Html.PasswordFor(m => m.ConfirmPassword, new { placeholder = "Confirm Password", @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })
                    </div>
                </div>
                
            </div>
        </div>
        <div class="row w-50 mx-auto justify-content-center mt-4">
            <div class="col-8">
                <button type="submit" class="btn btn-primary w-100">Register</button>
            </div>
        </div>
        <div class="row w-50 mx-auto justify-content-center mt-2">
            <div class="col-8">
                <a class="btn btn-success w-100" asp-action="Login">Sign in</a>
            </div>
        </div>
    </form>
</div>

@model ETicket.Domain.DTO.TicketExportDto

@{
    ViewData["Title"] = "Export Tickets";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row text-center">
        <div class="col-2">

        </div>
        <div class="col-8">
            <h3>Export tickets based on Category!</h3>
        </div>
        <div class="col-2">
             
        </div>
    </div>
    <div class="row mt-5">
        <div class="col-3">

        </div>
        <div class="col-6">
            <form asp-action="TicketExport" method="post">
                <div class="form-group">
                    @Html.DisplayFor(m => m.ChosenCategory)
                    @Html.DropDownListFor(m => m.ChosenCategory, new SelectList(Model.Categories), new { @class = "form-control" })
                </div>
                <div class="form-group text-center">
                    <input type="submit" value="Export" class="btn btn-primary" />
                </div>
            </form>
        </div>
        <div class="col-3">

        </div>
    </div>
</div>

@model ETicket.Domain.DTO.AddTicketToCartDto
@{
    ViewData["Title"] = "Add to Shopping Cart";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Add Ticket To Shopping Cart</h1>
<hr />
<div class="container">
    <div class="row">
        <div class="col-5 m-auto">
            <form asp-action="AddToShoppingCart" method="post">
                <input type="hidden" asp-for="TicketId" />
                <div class="form-group">
                    <label asp-for="Ticket.MovieTitle"></label>
                    <input asp-for="Ticket.MovieTitle" disabled class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="Quantity"></label>
                    <input asp-for="Quantity" class="form-control" />
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-outline-success"/>
                </div>
            </form>
        </div>
    </div>
</div>
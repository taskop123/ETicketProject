@model ETicket.Web.Models.Identity.UserRegisterDto
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
     <h1>Register</h1>
    @Html.ValidationSummary()
    <form asp-action="Register" asp-controller="Account" method="post">
        <div class="row w-75">

            <div class="form-group col-12">
                <label asp-for="@Model.Email" class="col-3 control-label"></label>
                <br />
                <div class="col-9">
                    @Html.TextBoxFor(m => m.Email, new { placeholder = "Email", @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Email)
                </div>
            </div>
        </div>

        <div class="row w-75">
            <div class="form-group col-12">
                <label asp-for="@Model.Password" class="col-3 control-label"></label>
                <br />
                <div class="col-9">
                    @Html.PasswordFor(m => m.Password, new { placeholder = "Password", @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Password)
                </div>
            </div>
        </div>
        <div class="row w-75">
            <div class="form-group col-12">
                <label asp-for="@Model.ConfirmPassword" class="col-3 control-label"></label>
                <br />
                <div class="col-9">
                    @Html.PasswordFor(m => m.ConfirmPassword, new { placeholder = "Confirm Password", @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.ConfirmPassword)
                </div>
            </div>
        </div>
        <div class="row w-75">
            <div class="col-12">
                <button type="submit" class="btn btn-outline-primary">Register</button>
            </div>
        </div>

    </form>
</div>
